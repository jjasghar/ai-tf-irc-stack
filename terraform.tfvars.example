# Copy this file to terraform.tfvars and fill in your values

# ===========================
# CLOUD PROVIDER SELECTION
# ===========================
# Choose your cloud provider: "digitalocean" or "ibm"
cloud_provider = "digitalocean"

# ===========================
# DIGITALOCEAN CONFIGURATION
# ===========================
# DigitalOcean API Token
# Get this from: https://cloud.digitalocean.com/account/api/tokens
do_token = "your_digitalocean_api_token_here"

# ===========================
# IBM CLOUD CONFIGURATION
# ===========================
# IBM Cloud API Key (only needed if using IBM Cloud)
# Get this from: https://cloud.ibm.com/iam/apikeys
ibm_api_key = "your_ibm_api_key_here"

# IBM Cloud Region (only needed if using IBM Cloud)
ibm_region = "us-south"

# IBM Cloud Resource Group (only needed if using IBM Cloud)
ibm_resource_group = "default"

# IBM Cloud SSH Key Name (only needed if using IBM Cloud)
# Create SSH key first in IBM Cloud console
ibm_ssh_key_name = "your_ssh_key_name"

# ===========================
# DNS CONFIGURATION
# ===========================
# DNSimple API Token  
# Get this from: https://dnsimple.com/user (Account Settings > Automation)
dnsimple_token = "your_dnsimple_api_token_here"

# DNSimple Account ID
# Find this in your DNSimple account dashboard URL or account settings
dnsimple_account_id = "your_dnsimple_account_id_here"

# ===========================
# SSH CONFIGURATION
# ===========================
# Path to your SSH public key file
ssh_public_key_path = "~/.ssh/id_rsa.pub"
# Path to your SSH private key file (for provisioners)
ssh_private_key_path = "~/.ssh/id_rsa"

# ===========================
# PROJECT CONFIGURATION
# ===========================
project_name = "irc-stack"
region       = "nyc3"  # DigitalOcean region (ignored for IBM Cloud)

# DNS Configuration
dns_zone        = "asgharlabs.io"
dns_record_name = "irc"                    # For production: "irc" -> irc.asgharlabs.io
create_www_cname = false

# ===========================
# IRC SERVER CONFIGURATION
# ===========================
admin_email        = "admin@asgharlabs.io"
ergo_network_name  = "AsgharlabsNet"
ergo_motd          = "Welcome to Asgharlabs IRC Network!"